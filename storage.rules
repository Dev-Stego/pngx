rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User files - only authenticated owner can read/write
    match /users/{userId}/files/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Shared files - anyone with the link can read
    match /shares/{shareId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
